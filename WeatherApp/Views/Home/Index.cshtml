@{
    ViewData["Title"] = "Home Page";
}

@model List<TempViewModel>
<div class="d-flex flex-row gap-2">
    <div class="w-25 p-2 border rounded p-2 pt-5 pb-5">
        <h1 class="display-4 text-center">Welcome</h1>
        @if(ViewBag.ErrorMessage.Length > 0) {
            <p class="text-danger fw-bold">@ViewBag.ErrorMessage</p>
        }
        <form method="post" asp-controller="Home" asp-action="GetTemp">
            <div class="form-group mb-2">
                <label class="form-label">Location</label>
                <input class="form-control" type="text" name="search_key" />
            </div>
            <div class="form-group mb-2 d-flex justify-content-center">
                <button class="btn btn-success" type="submit">Get Temperature</button>
            </div>
        </form>
    </div>
    <div class="w-75 border rounded p-4 d-flex flex-row gap-4">
        @if (@Model != null)
        {
            @foreach (var item in Model)
            {
                <div class="w-25 h-50 border rounded p-2 d-flex flex-column  align-items-center gap-3">
                    <div class="w-100 d-flex justify-content-around">
                        <span>@item.name</span>
                        <span>@item.temp_c C</span>
                        <span>@item.temp_f F</span>
                        <span>@item.text</span>
                    </div>
                    <div class="w-25 h-25">
                        <img src="@item.imageUrl" class="card-img" style="height: fit-content;" />
                    </div>
                </div>
            }
        }
    </div>
   
</div>
